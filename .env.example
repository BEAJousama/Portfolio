NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2026-02-16
SANITY_API_READ_TOKEN=

# Site URL for sitemap and canonical URLs (e.g. https://yourdomain.com)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Google Analytics (GA4) – measurement ID from GA4 property (e.g. G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=


# Google Search Console – verification code from Search Console → Settings → Ownership verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Optional: trigger Vercel redeploy from Sanity Studio "Deploy" tool
# Create a deploy hook in Vercel: Project → Settings → Git → Deploy Hooks
VERCEL_DEPLOY_HOOK_URL=
